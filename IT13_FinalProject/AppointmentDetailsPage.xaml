<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.AppointmentDetailsPage"
             Title="Appointment Details">
    <VerticalStackLayout Padding="24" Spacing="18">
        <Label Text="Appointment Details" FontSize="28" FontAttributes="Bold" TextColor="#1e2445" HorizontalOptions="Center" />
        <Label x:Name="IdLabel" FontSize="18" TextColor="#FFB84B" />
        <Label x:Name="CustomerLabel" FontSize="18" TextColor="White" />
        <Label x:Name="ServiceLabel" FontSize="18" TextColor="WhiteSmoke" />
        <Label x:Name="StaffLabel" FontSize="18" TextColor="#4B91FF" />
        <Label x:Name="DateLabel" FontSize="18" TextColor="#FFB84B" />
        <Label x:Name="StatusLabel" FontSize="18" TextColor="WhiteSmoke" />
        <Button Text="Back" Clicked="OnBackClicked" BackgroundColor="#4B91FF" TextColor="White" CornerRadius="8" />
    </VerticalStackLayout>
</ContentPage>

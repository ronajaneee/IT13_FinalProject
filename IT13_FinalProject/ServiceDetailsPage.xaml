<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.ServiceDetailsPage"
             Title="Service Details">
    <VerticalStackLayout Padding="24" Spacing="18">
        <Label x:Name="NameLabel" FontSize="24" FontAttributes="Bold" TextColor="#1e2445" />
        <Label x:Name="PriceLabel" FontSize="18" TextColor="#FFB84B" />
        <Label x:Name="DurationLabel" FontSize="18" TextColor="WhiteSmoke" />
        <Label x:Name="DescriptionLabel" FontSize="16" TextColor="#ccc" />
        <Button Text="Back" Clicked="OnBackClicked" BackgroundColor="#4B91FF" TextColor="White" CornerRadius="8" />
    </VerticalStackLayout>
</ContentPage>

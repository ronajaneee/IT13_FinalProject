<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.StaffManagementView">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
            <Label Text="Staff Management"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1e2445"
                   HorizontalOptions="Center" />
            <Button Text="Add Staff" BackgroundColor="#4B91FF" TextColor="White" CornerRadius="8" HeightRequest="44" HorizontalOptions="End" Margin="0,0,0,10" Clicked="OnAddStaffClicked"/>
            <CollectionView ItemsSource="{Binding StaffList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2D3748" CornerRadius="16" Padding="18" Margin="0,0,0,10">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" TextColor="White" />
                                <Label Text="Role: {Binding Role}" FontSize="14" TextColor="#FFB84B" />
                                <Label Text="Schedule: {Binding WorkSchedule}" FontSize="14" TextColor="WhiteSmoke" />
                                <Label Text="Performance: {Binding Performance}" FontSize="14" TextColor="#ccc" />
                                <HorizontalStackLayout Spacing="16">
                                    <Button Text="Edit" BackgroundColor="#FFB84B" TextColor="#1e2445" CornerRadius="8" Clicked="OnEditStaffClicked" />
                                    <Button Text="Delete" BackgroundColor="#FF4B91" TextColor="White" CornerRadius="8" Clicked="OnDeleteStaffClicked" />
                                    <Button Text="Assign Role" BackgroundColor="#4B91FF" TextColor="White" CornerRadius="8" Clicked="OnAssignRoleClicked" />
                                    <Button Text="Set Schedule" BackgroundColor="#2D3748" TextColor="#FFB84B" CornerRadius="8" Clicked="OnSetScheduleClicked" />
                                    <Button Text="Performance" BackgroundColor="#2D3748" TextColor="#4B91FF" CornerRadius="8" Clicked="OnViewPerformanceClicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>

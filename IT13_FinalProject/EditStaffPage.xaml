<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.EditStaffPage"
             Title="Edit Staff">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Label Text="Edit Staff" FontSize="28" FontAttributes="Bold" TextColor="#1e2445" HorizontalOptions="Center" />
            <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
            <Entry x:Name="EmailEntry" Placeholder="Email" />
            <Entry x:Name="PhoneEntry" Placeholder="Phone" />
            <Entry x:Name="RoleEntry" Placeholder="Role/Position" />
            <Entry x:Name="StatusEntry" Placeholder="Status" />
            <Button Text="Save Changes" BackgroundColor="#FFB84B" TextColor="White" CornerRadius="8" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

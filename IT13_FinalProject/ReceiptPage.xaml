<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.ReceiptPage"
             Title="Receipt">
    <VerticalStackLayout Padding="24" Spacing="18">
        <Label x:Name="ReceiptLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label x:Name="DetailsLabel" FontSize="16" />
        <Button Text="Close" Clicked="OnCloseClicked" BackgroundColor="#4B91FF" TextColor="White" CornerRadius="8" />
    </VerticalStackLayout>
</ContentPage>

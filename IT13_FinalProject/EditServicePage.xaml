<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT13_FinalProject.EditServicePage"
             Title="Edit Service">
    <VerticalStackLayout Padding="24" Spacing="18">
        <Label Text="Edit Service" FontSize="28" FontAttributes="Bold" TextColor="#1e2445" HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Service Name" />
        <Entry x:Name="DescriptionEntry" Placeholder="Description" />
        <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Entry x:Name="DurationEntry" Placeholder="Duration (e.g., 60 mins)" />
        <Button Text="Save" BackgroundColor="#FFB84B" TextColor="#1e2445" CornerRadius="8" Clicked="OnSaveClicked" />
        <Button Text="Cancel" BackgroundColor="#FF4B91" TextColor="White" CornerRadius="8" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>
